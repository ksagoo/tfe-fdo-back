def reassign_ip_geo_asn_lists(session, base_url, config_id, version, policy_id, template_to_clone_id_map):
    """
    Reassigns IP, GEO, ASN and exception lists in the ip-geo-firewall section
    of the security policy using mapped clone list IDs.
    """
    print("[INFO] RUNNING: reassign_ip_geo_asn_lists")

    url = f"{base_url}/appsec/v1/configs/{config_id}/versions/{version}/security-policies/{policy_id}/ip-geo-firewall"

    summary = {
        "processed": 1,
        "successful": 0,
        "failed": 0,
        "details": []
    }

    try:
        response = session.get(url)
        response.raise_for_status()
        data = response.json()

        updated = False

        # Section and keys to scan for client list IDs
        controls = {
            "geoControls": ["networkList"],  # flat list
            "ipControls": ["allowedIPNetworkLists", "blockedIPNetworkLists"],  # nested
            "blockExceptions": ["networkList"]  # nested
        }

        for section_key, list_keys in controls.items():
            section = data.get(section_key, {})
            for key in list_keys:
                list_block = section.get(key)

                # Case 1: nested dict with "networkList" key (ipControls, blockExceptions)
                if isinstance(list_block, dict) and "networkList" in list_block:
                    original_ids = list_block.get("networkList", [])
                    list_container = list_block
                    is_nested = True

                # Case 2: flat list (geoControls.networkList)
                elif isinstance(list_block, list):
                    original_ids = list_block
                    list_container = section
                    is_nested = False

                else:
                    print(f"[DEBUG] Skipping {section_key}.{key} (not list or expected dict structure)")
                    continue

                if not original_ids:
                    continue

                new_ids = []
                replaced_any = False

                for orig_id in original_ids:
                    new_id = template_to_clone_id_map.get(orig_id)
                    if new_id:
                        print(f"[INFO] Replaced {section_key}.{key} ID {orig_id} â†’ {new_id}")
                        new_ids.append(new_id)
                        replaced_any = True
                    else:
                        new_ids.append(orig_id)

                if replaced_any:
                    if is_nested:
                        list_container["networkList"] = new_ids
                        section[key] = list_container
                    else:
                        section[key] = new_ids

                    data[section_key] = section
                    updated = True

        if updated:
            put_response = session.put(url, json=data)
            put_response.raise_for_status()
            summary["successful"] += 1
            summary["details"].append({"id": policy_id, "status": "success"})
        else:
            summary["details"].append({
                "id": policy_id,
                "status": "skipped",
                "reason": "no matching template list IDs found"
            })
            print("[INFO] No matching template list IDs found, skipping reassignment.")

    except Exception as e:
        summary["failed"] += 1
        summary["details"].append({"status": "failed", "error": str(e)})
        print(f"[ERROR] Failed to reassign IP/GEO/ASN lists: {e}")

    return summary
