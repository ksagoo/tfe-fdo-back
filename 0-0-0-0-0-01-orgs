def list_all_client_list_names(session, base_url):
    url = urljoin(base_url, "/client-list/v1/lists?includeItems=true&includeDeprecated=true")
    headers = {"Accept": "application/json"}

    resp = session.get(url, headers=headers)

    if not resp.ok:
        raise Exception(f"[ERROR] {resp.status_code}: {resp.text}")

    client_lists = resp.json().get("content", [])

    print(f"\n[INFO] Total Client Lists Found: {len(client_lists)}\n")

    for cl in client_lists:
        name = cl.get("groupName", "(no name)")
        print(f"- {name}")

# Example usage
