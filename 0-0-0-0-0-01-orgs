def dry_run_preview(config_name, policy_name, policy_prefix, fqdn, region, group_id, contract_id, template_cfg, template_pol, section):
    print("\n[AFTER APPROVAL]: Summary of actions to be taken:")
    print("--------------------------------------------------")
    print(f"ðŸ”¹ Security Config Name: {config_name}")
    print(f"ðŸ”¹ Policy Name:           {policy_name}")
    print(f"ðŸ”¹ Policy Prefix:         {policy_prefix}")
    
    if fqdn:
        print(f"ðŸ”¹ Primary FQDN:          {fqdn[0]}")
        if len(fqdn) > 1:
            print(f"ðŸ”¹ SAN Hostnames:         {' | '.join(fqdn[1:])}")
    else:
        print("ðŸ”¹ Primary FQDN:          [MISSING]")

    print(f"ðŸ”¹ Account:               {section}")
    print(f"ðŸ”¹ Region:                {region}")
    print(f"ðŸ”¹ Group ID:              {group_id}")
    print(f"ðŸ”¹ Contract ID:           {contract_id}")
    print(f"ðŸ”¹ Cloning From Config:   {template_cfg}")
    print(f"ðŸ”¹ Cloning From Policy:   {template_pol}")
    print("--------------------------------------------------\n")
