def search_client_lists(session, base_url, keyword):
    url = urljoin(base_url, "/client-list/v1/lists?includeItems=true&includeDeprecated=true")
    headers = {"Accept": "application/json"}
    resp = session.get(url, headers=headers)

    if not resp.ok:
        raise Exception(f"[ERROR] {resp.status_code}: {resp.text}")

    print(f"\n[INFO] Searching for client lists containing: '{keyword}'\n")
    found = False

    for cl in resp.json().get("content", []):
        name = cl.get("groupName", "")
        items = cl.get("items", [])
        for item in items:
            description = item.get("description", "")
            if keyword.lower() in name.lower() or keyword.lower() in description.lower():
                found = True
                print(f"[MATCH] {name} â†’ {description} ({item.get('productionStatus')})")

    if not found:
        print("[INFO] No matches found.")
