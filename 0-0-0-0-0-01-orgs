for section_key in ["geoControls", "ipControls", "blockExceptions"]:
    control = data.get(section_key, {})
    for list_key in ["networkList", "allowedIPNetworkLists", "blockedIPNetworkLists"]:
        if list_key in control:
            original_list = control[list_key].get("networkList", [])
            if not original_list:
                continue

            new_list = []
            updated = False
            for orig_id in original_list:
                new_id = template_to_clone_id_map.get(orig_id)
                if new_id:
                    print(f"[INFO] Replaced {section_key}.{list_key} ID {orig_id} â†’ {new_id}")
                    new_list.append(new_id)
                    updated = True
                else:
                    new_list.append(orig_id)

            if updated:
                control[list_key]["networkList"] = new_list
