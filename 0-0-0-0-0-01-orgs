def list_all_client_lists(session, base_url):
    url = urljoin(base_url, "/client-list/v1/lists?includeItems=true&pageSize=100")
    resp = session.get(url)

    if not resp.ok:
        raise Exception(f"Failed to retrieve client lists: {resp.status_code} - {resp.text}")

    client_lists = resp.json().get("content", [])
    print(f"\n[INFO] Total Client Lists Found: {len(client_lists)}\n")

    for cl in client_lists:
        name = cl.get("name", "<no name>")
        list_id = cl.get("listId", "<no id>")
        print(f"- {name} : {list_id}")
