def clone_and_rename_client_lists(session, base_url, config_id, version, access_group, section):
    print(f"[INFO] Cloning client lists from Security Policy Template...")
    summary = {
        "processed": 0,
        "successful": 0,
        "failed": 0,
        "skipped_existing": [],
        "results": []
    }

    # Helper to normalize list names for comparison
    def normalize(name):
        return name.strip().lower()

    try:
        url = f"{base_url}/client-list/v1/lists?includeDeprecated=true&includeNetworkLists=true"
        resp = session.get(url)
        resp.raise_for_status()
        client_lists = resp.json().get("content", [])
    except Exception as e:
        print(f"[ERROR] Failed to fetch client lists: {e}")
        return summary

    # Build normalized lookup of all existing client lists
    existing_lists_by_name = {}
    for cl in client_lists:
        name = normalize(cl.get("name", ""))
        existing_lists_by_name.setdefault(name, []).append(cl)

    # Process only Security Policy Template lists
    for cl in client_lists:
        original_name = cl.get("name", "")
        if not original_name.startswith("Security Policy Template"):
            continue

        suffix = original_name.replace("Security Policy Template", "").strip()
        new_name = f"SC-{access_group}-{suffix}"
        norm_new_name = normalize(new_name)

        matching_targets = existing_lists_by_name.get(norm_new_name, [])
        print(f"[DEBUG] Matching lists for '{new_name}': {len(matching_targets)} found.")

        still_in_use = False
        for t in matching_targets:
            delete_available = t.get("availableActions", {}).get("DELETE", {}).get("available", False)
            print(f"[DEBUG]   - listId: {t.get('listId')}, DELETE.available: {delete_available}")
            if not delete_available:
                still_in_use = True
                break

        if still_in_use:
            print(f"[SKIP] Target list '{new_name}' already exists and is in use, skipping.")
            summary["skipped_existing"].append(new_name)
            continue

        # Clone the template list
        payload = {
            "name": new_name,
            "type": cl.get("type"),
            "listType": cl.get("listType"),
            "description": f"Cloned from template list '{original_name}'",
            "tags": [],
            "cloneFromList": {
                "listId": cl.get("listId")
            }
        }

        clone_url = f"{base_url}/client-list/v1/lists"
        if section:
            clone_url += f"?section={section}"

        try:
            response = session.post(clone_url, json=payload)
            response.raise_for_status()
            created_id = response.json().get("listId")
            print(f"[SUCCESS] Cloned: '{original_name}' => '{new_name}' (listId: {created_id})")
            summary["successful"] += 1
            summary["results"].append({
                "status": "success",
                "source": original_name,
                "target": new_name,
                "listId": created_id
            })
        except Exception as e:
            print(f"[ERROR] Failed to clone '{original_name}' to '{new_name}': {e}")
            summary["failed"] += 1
            summary["results"].append({
                "status": "failed",
                "source": original_name,
                "target": new_name,
                "error": str(e)
            })

        summary["processed"] += 1

    print("\n[SUMMARY]")
    print(json.dumps(summary, indent=2))
    return summary
